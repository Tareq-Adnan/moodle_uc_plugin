<h1 class="text-center">Upcomming Courses</h1>

<hr>
<table class="table table-bordered table-hover   text-center">
    <thead class="bg-info text-light">
        <tr>
            <th>Course ID</th>
            <th>Course Title</th>
            <th>Description</th>
            <th>Course Type</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        {{#messages}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{type}}</td>
            <td>
                <a href="{{editpage}}?eid={{id}}" class="btn btn-primary">EDIT</a>
                <a id="delete-btn-{{id}}" data-id="{{id}}" class="btn btn-danger delete-btn">DELETE</a>
            </td>
        </tr>
        {{/messages}}
       
    </tbody>
</table>
<hr>
<div class="d-flex justify-content-center">
    <input type="button" class="btn btn-primary text-center" value="Create Course" onclick="location.href='{{editpage}}'">
</div>
